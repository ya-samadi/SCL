{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-md-3 text-center">
            <img src="{{ user.picture }}" class="avatar mb-2" alt="Avatar de {{ user.fullName }}">
            <br>
            <span class="badge badge-primary">{{ user.products | length }} products</span>
        </div>
        <div class="text-center col-md-9">
            <h1>{{ user.fullName }}</h1>
            {% if user is same as(app.user)  %}
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifer mes informations</a>
                    <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifer mon mot de passe</a>
                </div>
            {% endif %}
        </div>
    </div>
    {{ user.description | raw }}
    <hr>
    <h2>Les Produits de {{ user.fullName }}</h2>

    {% if user.products | length > 0 %}
        <div class="row">
            {% for product in user.products %}
                {% include 'product/_product.html.twig' %}
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning">
            <p>
                <strong>{{ user.fullName }}</strong> n'a pas de produit
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}
