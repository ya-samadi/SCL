{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Voici les produits !</h1>
    <div class="row">
        {% for product in products %}
        {% set url = path('products_show', {'slug': product.slug}) %}
        <div class="col-md-4 my-2">
            <div class="card mb-3" style="height: 100%">
                <a href="{{ url }}">
                    <h3 class="card-header">{{ product.title }}</h3>
                    <img src="{{ product.coverImage }}" alt="" width="100%" height="200">
                </a>
                <div class="card-body">
                    <p class="card-text">{{ product.description|raw }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Price : {{ product.price }} $</li>
                </ul>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
