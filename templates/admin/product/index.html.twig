{% extends 'admin/base.html.twig' %}

{% block title %}Administration des produits {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des produits</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Owner</th>
                <th class="text-center">Commendes</th>
                <th class="text-center">Note</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</th>
                <td>{{ product.title }}</th>
                <td>
                    <img src="{{ product.owner.picture }}" alt="Avatar de {{ product.owner.fullName }}" class="avatar avatar-micro mr-2">
                    {{ product.owner.fullName }}</th>
                <td class="text-center"><span class="badge badge-primary rounded">{{ product.commandes | length }}</span></th>
                <td class="text-center"><span class="badge badge-primary rounded">{{ product.avgRating | number_format(1, ',', ' ') }}</span></th>
                <td>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
